@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Products";
}


<style>
    .product-container-bg {
        background-image: url('https://motionarray.imgix.net/preview-891187-wOvXOH2hVl-high_0000.jpg?w=660&q=60&fit=max&auto=format'); /* Replace 'your-background-image-url.jpg' with the actual URL of your background image */
        background-size: auto;
        background-position: center;
       
        
    }
</style>

<div class="MyProducts product-container-bg">
    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 prod">
                    <div class="card mb-2 h-100 red-border" style="width: auto">
                        <img class="card-img-top h-100 img-fluid"
                             src="@product.ImageUrl" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title mt-1">@product.Name</h5>
                            <p class="mb-0">Mark: @product.Mark</p>
                            <b class="mb-1">@product.Price$</b>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a asp-route-id="@product.Id" asp-controller="Product" asp-action="Details" method="post">
                                <input type="submit" value="Details" class="btn btn-primary btn-sm" />
                            </a>
                            @if (!User.IsInRole("Administrator"))
                            {
                                <a asp-route-id="@product.Id" asp-controller="User" asp-action="Buy">
                                    <input type="submit" value="Add to Cart" class="btn btn-warning btn-sm" />
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


