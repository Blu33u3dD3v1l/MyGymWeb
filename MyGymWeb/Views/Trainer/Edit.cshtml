@model EditTrainerFormModel

@{
    ViewBag.Title = "Edit Trainer";
}

<h2 class="text-center text-warning text-decoration-underline">@ViewBag.Title</h2>
<hr />

<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Name" class="text-warning h5"></label>
                <input asp-for="Name" class="form-control" placeholder="Write your title here...">
                <span asp-validation-for="@Model.Name" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Info" class="text-warning h5"></label>
                <input asp-for="Info" class="form-control" placeholder="Write your post here...">
                <span asp-validation-for="@Model.Info" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl" class="text-warning h5"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Write your post here...">
                <span asp-validation-for="@Model.ImageUrl" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Practis" class="text-warning h5"></label>
                <input asp-for="Practis" class="form-control" placeholder="Write your post here...">
                <span asp-validation-for="@Model.Practis" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PricePerHour" class="text-warning h5"></label>
                <input asp-for="PricePerHour" class="form-control" placeholder="Write your post here...">
                <span asp-validation-for="@Model.PricePerHour" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Type" class="text-warning h5"></label>
                <input asp-for="Type" class="form-control" placeholder="Write your post here...">
                <span asp-validation-for="@Model.Type" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Moto" class="text-warning h5"></label>
                <input asp-for="Moto" class="form-control" placeholder="Write your post here...">
                <span asp-validation-for="@Model.Moto" class="small text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Edit" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
