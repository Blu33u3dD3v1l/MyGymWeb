@model IEnumerable<TrainerViewModel>

@{
    ViewBag.Title = "Trainers";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />



<div class="text-center row">
    @foreach (var trainer in Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" style="width: 17rem;"
                 src="@trainer.ImageUrl" alt="Trainer Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@trainer.Name</h5>               
            </div>
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <div class="d-flex justify-content-center">
                    <a asp-route-trainerId="@trainer.Id" asp-controller="Trainer" asp-action="Details" method="post">
                        <input type="submit" value="Details" class="btn btn-primary btn-sm" />
                    </a>
                    <a asp-route-id="@trainer.Id" asp-controller="Trainer" asp-action="Pick" method="post">
                        <input type="submit" value="PickTrainer" class="btn btn-warning btn-sm" />
                    </a>
                    <a asp-route-id="@trainer.Id" asp-controller="Trainer" asp-action="Edit" method="post">
                        <input type="submit" value="EditTrainer" class="btn btn-success btn-sm" />
                    </a>
                    <a asp-route-id="@trainer.Id" asp-controller="Trainer" asp-action="Delete" method="get">
                        <input type="submit" value="Delete" class="btn btn-success btn-sm" />
                    </a>
                </div>

            }
        </div>
    }
</div>
