@model GymsViewModel

@{
    ViewBag.Title = "Gym Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImageUrl" alt="Gym Image">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Name</u></p>
            <p>Description: <b>@Model.Description</b></p>                      
            <p>Type: <b>@Model.Type</b></p>            
            <div class="form-inline">
                @if(this.User.Identity.IsAuthenticated)
                {
                   
                   <a class="ml-2 btn btn-danger" asp-controller="Gym" asp-action="Pick Gym"
                   asp-route-gymId="@Model.Id">Pick</a>
                   
                }
            </div>
        </div>
    </div>
</div>
