@model IEnumerable<GymsViewModel>
@using MyGymWeb.Infrastructure.Extensions;

@{
    ViewBag.Title = "Gyms";
}

<div class="AllGyms">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card mb-3 h-100 blue-border">
                    <img class="card-img-top h-100" src="@item.ImageUrl" alt="House Image">
                    <div class="card-body text-center">
                        <h4>@item.Name</h4>
                        <h6>Name: <b>@item.Name</b></h6>
                        <h6>Type: <b>@item.Type</b></h6>
                        <br />
                        <a asp-controller="Gym" asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-success">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

   

     
    

