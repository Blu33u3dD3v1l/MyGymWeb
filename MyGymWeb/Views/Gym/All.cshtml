@model IEnumerable<GymsViewModel>
@using MyGymWeb.Infrastructure.Extensions;

@{
    ViewBag.Title = "Gyms";
}

<style>
    .gym-container-bg {
        background-image: url('https://motionarray.imgix.net/preview-891187-wOvXOH2hVl-high_0000.jpg?w=1600&q=60&fit=max&auto=format');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        padding-top: 50px;
        padding-bottom: 50px;
        min-height: 100vh;
        padding-top: 120px;
    }

    .card-custom {
        background: rgba(255, 255, 255, 0.85);
        border: none;
        backdrop-filter: blur(8px);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-custom:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .btn-primary {
        background-color: #0056b3;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #003d80;
        }

    h4, h6 {
        margin-bottom: 10px;
    }
</style>

<div class="gym-container-bg">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 text-white fw-bold">Explore Gyms</h1>
            <p class="lead text-light">Find the best gym for your goals!</p>
        </div>

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card card-custom h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="Gym Image">
                        <div class="card-body text-center">
                            <h4 class="card-title">@item.Name</h4>
                            <h6 class="card-subtitle mb-2 text-muted">Type: <b>@item.Type</b></h6>
                            <div class="mt-3">
                                <a asp-controller="Gym" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
