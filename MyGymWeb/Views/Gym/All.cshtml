@model IEnumerable<GymsViewModel>
@using MyGymWeb.Infrastructure.Extensions;

@{
    ViewBag.Title = "Gyms";
}

<style>
    .gym-container-bg {
        background-image: url('https://motionarray.imgix.net/preview-891187-wOvXOH2hVl-high_0000.jpg?w=660&q=60&fit=max&auto=format'); /* Replace 'your-background-image-url.jpg' with the actual URL of your background image */
        background-size: auto;
        background-position: center;
    }
</style>

<div class="AllGyms gym-container-bg">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 mb-4">
                    <div class="card mb-2 h-100 blue-border">
                        <img class="card-img-top h-100 img-fluid" src="@item.ImageUrl" alt="House Image">
                        <div class="card-body text-center">
                            <h4>@item.Name</h4>
                            <h6>Name: <b>@item.Name</b></h6>
                            <h6>Type: <b>@item.Type</b></h6>
                            <br />
                            <a asp-controller="Gym" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>   
</div>

   

     
    

