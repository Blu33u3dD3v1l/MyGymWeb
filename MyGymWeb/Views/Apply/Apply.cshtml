@model AddTrainerFormModel

@{
    ViewBag.Title = "Apply for Trainer";
}

<style>
    .trainer-form-wrapper {
        background-color: #1f1f1f;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 25px rgba(255, 193, 7, 0.1);
        color: white;
    }

        .trainer-form-wrapper label {
            font-weight: 500;
            color: #f8f9fa;
        }

        .trainer-form-wrapper input {
            background-color: #2c2c2c;
            border: 1px solid #444;
            color: #fff;
        }

            .trainer-form-wrapper input:focus {
                background-color: white;
                border-color: #ffc107;
                box-shadow: 0 0 5px rgba(255, 193, 7, 0.5);
            }

        .trainer-form-wrapper .btn-primary {
            background-color: #ffc107;
            border: none;
            font-weight: 600;
            color: #1f1f1f;
        }

            .trainer-form-wrapper .btn-primary:hover {
                background-color: #e0a800;
            }

    .form-title {
        color: #ffc107;
        font-size: 32px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }
</style>

<h2 class="text-center text-warning mb-4">@ViewBag.Title</h2>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6 trainer-form-wrapper">
            <div class="form-title">Trainer Application</div>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Info">Info</label>
                    <input asp-for="Info" class="form-control" />
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Type">Type</label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Motto">Motto</label>
                    <input asp-for="Motto" class="form-control" />
                    <span asp-validation-for="Motto" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Practis">Practis</label>
                    <input asp-for="Practis" class="form-control" />
                    <span asp-validation-for="Practis" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PricePerHour">Price per Hour</label>
                    <input asp-for="PricePerHour" class="form-control" />
                    <span asp-validation-for="PricePerHour" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="d-grid mt-4">
                    <input class="btn btn-primary btn-lg" type="submit" value="Apply" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
