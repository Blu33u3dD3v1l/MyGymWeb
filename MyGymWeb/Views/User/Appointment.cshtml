@model AppointmentFormModel


@{
    ViewData["Title"] = "Appointment";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fancy Form</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Link to Flatpickr CSS -->
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
</head>

<body>
    <div class="Appointments">
        <div class="container mt-5">
            <form method="post">             
                <div class="form-group">
                    <label asp-for="@Model.AppointmentTime">Date</label>
                    <input asp-for="@Model.AppointmentTime" class="form-control" id="datetimeField" aria-required="true">
                    <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                </div>              
                <div class="form-group">
                    <label asp-for="@Model.ClientFullName" class="form-label">Name</label>
                    <input asp-for="@Model.ClientFullName" class="form-control" aria-required="true" />
                    <span asp-validation-for="ClientFullName" class="text-danger"></span>
                </div>        
                <div class="form-group">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TrainerName" class="form-label">TrainerName</label>
                    <input asp-for="@Model.TrainerName" class="form-control" aria-required="true" />
                    <span asp-validation-for="TrainerName" class="text-danger"></span>
                </div>
                <button asp-controller="User" asp-action="Appointment" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
       
        flatpickr('#datetimeField', {
            enableTime: true,
            noCalendar: false,
            dateFormat: 'Y-m-d H:i',
            time_24hr: true
        });
        
        flatpickr('#calendarField', {
            dateFormat: 'Y-m-d',
            time_24hr: true
        });
    </script>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}