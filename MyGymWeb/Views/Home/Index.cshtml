@model IEnumerable<IndexViewModel>

@{ ViewData["Title"] = "Home Page";
   var gyms = Model.ToList(); 
}

@if(!gyms.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for body build!</h1>
    </div>
}

<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < gyms.Count(); i++)
        {
            var gym = gyms[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:650px"
                     src="@gym.ImageUrl" alt="@gym.Type">
               @* <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Gym" asp-action="Details"
                       asp-route-gymId="@gym.Id"> @gym.Type</a>
                    </h5>
                </div>*@
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-
            target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-
            target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
            </button>
    </div>








