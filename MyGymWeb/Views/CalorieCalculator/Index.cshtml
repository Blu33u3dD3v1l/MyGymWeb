@model CalorieCalculatorModel
@{
    ViewData["Title"] = "Calorie Calculator";
}


<div class="container my-5">
    <h2 class="text-center mb-4 text-light">Calorie Calculator</h2>

    <div class="card p-4 shadow-lg" style="max-width: 500px; margin: auto;">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-gender-ambiguous fs-4 me-2"></i> Gender
                </label>
                <select asp-for="Gender" class="form-select">
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-calendar3 fs-4 me-2"></i> Age
                </label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-rulers fs-4 me-2"></i> Height (cm)
                </label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-speedometer2 fs-4 me-2"></i> Weight (kg)
                </label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-bicycle fs-4 me-2"></i> Activity Level
                </label>
                <select asp-for="ActivityLevel" class="form-select">
                    <option>Sedentary</option>
                    <option>Lightly Active</option>
                    <option>Moderately Active</option>
                    <option>Very Active</option>
                    <option>Extra Active</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-calculator me-1"></i> Calculate
            </button>
        </form>

        @if (Model.DailyCalories > 0)
        {
            <div class="alert alert-info mt-4 text-center">
                <i class="bi bi-graph-up-arrow me-1"></i>
                Your estimated daily calories: <strong>@Model.DailyCalories</strong> kcal
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
