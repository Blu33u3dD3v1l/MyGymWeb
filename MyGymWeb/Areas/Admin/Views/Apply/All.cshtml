@model IEnumerable<TrainerQuitViewModel>

@{
    ViewBag.Title = "Applications";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Table with Add and Delete Row Feature</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <style type="text/css">

        body {
            color: #404E67;
            background: #F5F7FA;
        }

        .table-wrapper {
            width: 700px;
            margin: 30px auto;
            background: #fff;
            padding: 20px;
            box-shadow: 0 1px 1px rgba(0,0,0,.05);
        }

        .table-title {
            padding-bottom: 10px;
            margin: 0 0 10px;
        }

            .table-title h2 {
                margin: 6px 0 0;
                font-size: 22px;
            }

            .table-title .add-new {
                float: right;
                height: 30px;
                font-weight: bold;
                font-size: 12px;
                text-shadow: none;
                min-width: 100px;
                border-radius: 50px;
                line-height: 13px;
            }

                .table-title .add-new i {
                    margin-right: 4px;
                }

        table.table {
            table-layout: fixed;
        }

            table.table tr th, table.table tr td {
                border-color: #e9e9e9;
            }

            table.table th i {
                font-size: 13px;
                margin: 0 5px;
                cursor: pointer;
            }

            table.table th:last-child {
                width: 100px;
            }

            table.table td a {
                cursor: pointer;
                display: inline-block;
                margin: 0 5px;
                min-width: 24px;
            }

                table.table td a.add {
                    color: #27C46B;
                }

                table.table td a.edit {
                    color: #FFC107;
                }

                table.table td a.delete {
                    color: #E34724;
                }

            table.table td i {
                font-size: 19px;
            }

            table.table td a.add i {
                font-size: 24px;
                margin-right: -1px;
                position: relative;
                top: 3px;
            }

            table.table .form-control {
                height: 32px;
                line-height: 32px;
                box-shadow: none;
                border-radius: 2px;
            }

                table.table .form-control.error {
                    border-color: #f50000;
                }

            table.table td .add {
                display: none;
            }
    </style>
</head>

<div class="ApplyUsers">
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th><label>Full Name</label></th>               
                    <th><label>Practis</label></th>
                    <th><label>Phone Number</label></th>
                    <th><label>Reason</label></th>
                    <th><label>Actions</label></th>
                </tr>
            </thead>
                @foreach (var user in Model)
                {
                <tbody>
                    <tr>
                        <td><label>@user.Name</label></td>                 
                        <td><label>@user.Practis</label></td>
                        <td><label>@user.PhoneNumber</label></td>
                        <td><label>@user.ForApplication</label></td>                      
                        <td>
                           
                            @if(user.ForApplication == "For Application")
                            {
                                <a asp-route-id="@user.Id" asp-area="Admin" asp-controller="Apply" asp-action="Delete" class="delete" title="Delete" data-toggle="tooltip" method="get"><i class="material-icons">&#10008;</i></a>
                                <a asp-route-id="@user.Id" asp-area="Admin" asp-controller="Apply" asp-action="Approve" class="Approve" title="Approve" data-toggle="tooltip" method="post"><i class="material-icons">✔️</i></a>
                            }
                            else
                            {
                                <a asp-route-id="@user.Id" asp-area="Admin" asp-controller="Apply" asp-action="Delete" class="reject" title="Reject" data-toggle="tooltip" method="get"><i class="material-icons">&#10008;</i></a>
                                <a asp-route-id="@user.Id" asp-area="Admin" asp-controller="Trainer" asp-action="DeleteForApply" class="delete" title="Delete" data-toggle="tooltip" method="post"><i class="material-icons">✔️</i></a>                               

                            }                           
                        </td>
                    </tr>
                </tbody>
                }            
        </table>
    </div>
</div>
