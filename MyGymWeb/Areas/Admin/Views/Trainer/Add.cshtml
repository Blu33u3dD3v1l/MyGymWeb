@model AddTrainerFormModel

@{
    ViewBag.Title = "Add Trainer";
}

<h2 class="text-center text-warning text-decoration-underline">@ViewBag.Title</h2>
<hr />

<div class="AdminAdd">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="text-warning h5" for="name">Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Info" class="text-warning h5">Info</label>
                    <input asp-for="@Model.Info" class="form-control" aria-required="true" />
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="text-warning h5">Image URL</label>
                    <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Type" class="text-warning h5">Type</label>
                    <input asp-for="@Model.Type" class="form-control" value="" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Moto" class="text-warning h5">Moto</label>
                    <input asp-for="@Model.Moto" class="form-control" value="" />
                    <span asp-validation-for="Moto" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Practis" class="text-warning h5">Practis</label>
                    <input asp-for="@Model.Practis" class="form-control" value="" />
                    <span asp-validation-for="Practis" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PricePerHour" class="text-warning h5">PricePerHour</label>
                    <input asp-for="@Model.PricePerHour" class="form-control" value="" />
                    <span asp-validation-for="PricePerHour" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-primary" type="submit" value="Add" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

