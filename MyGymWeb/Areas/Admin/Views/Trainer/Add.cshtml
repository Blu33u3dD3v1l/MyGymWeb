@model AddTrainerFormModel

@{
    ViewBag.Title = "Add Trainer";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="AddTrainer">
    <div class="row">
        <div class="col-sm-12 offset-lg- col-lg-8 offset-xl-3 col-xl-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"><h5><i>Name</i></h5></label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Info" class="form-label"><h5><i>Info</i></h5></label>
                    <input asp-for="@Model.Info" class="form-control" aria-required="true" />
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label"><h5><i>Image</i></h5></label>
                    <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Type" class="form-label"><h5><i>Type</i></h5></label>
                    <input asp-for="@Model.Type" class="form-control" value="" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Motto" class="form-label"><h5><i>Motto</i></h5></label>
                    <input asp-for="@Model.Motto" class="form-control" value="" />
                    <span asp-validation-for="Motto" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Practis" class="form-label"><h5><i>Practis</i></h5></label>
                    <input asp-for="@Model.Practis" class="form-control" value="" />
                    <span asp-validation-for="Practis" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PricePerHour" class="form-label"><h5><i>PricePerHour</i></h5></label>
                    <input asp-for="@Model.PricePerHour" class="form-control" value="" />
                    <span asp-validation-for="PricePerHour" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label"><h5><i>PhoneNumber</i></h5></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-primary" type="submit" value="Add" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}