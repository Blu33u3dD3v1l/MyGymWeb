    <div class="ManageAdmin">
        <div class="container table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-8"><h2>Products <b>Details</b></h2></div>
                        <div class="col-4 text-right">
                            <a class="btn btn-info add-new" asp-area="Admin" asp-controller="Product" asp-action="Add"><i class="fa fa-plus"></i> Add New</a>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.Price).ThenBy(x => x.Name))
                        {
                            <tr>
                                <td class="h5">@item.Name</td>
                                <td class="h5">@item.Mark</td>
                                <td class="h5">@item.Price $</td>
                                <td>
                                    <a class="add" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                                    <a asp-route-id="@item.Id" asp-area="Admin" asp-controller="Product" asp-action="Edit" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                    <a asp-route-id="@item.Id" asp-area="Admin" asp-controller="Product" asp-action="Delete" class="delete" title="Delete" data-toggle="tooltip" method="get"><i class="material-icons">&#xE872;</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center">
                    <h3>Total count of products:  @totalProductCount </h3>
                </div>
            </div>
        </div>
    </div>


