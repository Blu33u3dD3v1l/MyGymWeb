@model TestViewModel

@{
    ViewBag.Title = "Edit Post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="EditProducts">
    <div class="row">
        <form class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6" method="post">
            <div class="form-group">
                <div class="mb-3">
                    <label asp-for="Name"><h5 class="text-white"><i>Name</i></h5></label>
                    <input asp-for="Name" class="form-control" placeholder="Write your title here...">
                    <span asp-validation-for="@Model.Name" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Mark"><h5 class="text-white"><i>Mark</i></h5></label>
                    <input asp-for="Mark" class="form-control" placeholder="Write your post here...">
                    <span asp-validation-for="@Model.Mark" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl"><h5 class="text-white"><i>Image</i></h5></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Write your post here...">
                    <span asp-validation-for="@Model.ImageUrl" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description"><h5 class="text-white"><i>Description</i></h5></label>
                    <input asp-for="Description" class="form-control" placeholder="Write your post here...">
                    <span asp-validation-for="@Model.Description" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price"><h5 class="text-white"><i>Price</i></h5></label>
                    <input asp-for="Price" class="form-control" placeholder="Write your post here...">
                    <span asp-validation-for="@Model.Price" class="small text-danger"></span>
                </div>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Edit" />
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}